<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    
    <!-- Categories -->
    <changeSet id="1" author="a.alzuair">
        <createTable tableName="category">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>
    
    <!-- Items -->
    <changeSet id="2" author="a.alzuair">
        <createTable tableName="item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="calories" type="INT"/>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_items_category" references="category(id)"/>
            </column>
        </createTable>
    </changeSet>
    
    <!-- Restaurants -->
    <changeSet id="3" author="a.alzuair">
        <createTable tableName="restaurant">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="lat" type="DOUBLE PRECISION"/>
            <column name="lon" type="DOUBLE PRECISION"/>
        </createTable>
    </changeSet>
    
    <!-- Orders -->
    <changeSet id="4" author="a.alzuair">
        <createTable tableName="orders">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="total" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <!-- Order Items -->
    <changeSet id="5" author="a.alzuair">
        <createTable tableName="orders_items">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_item_order" references="orders(id)"/>
            </column>
            <column name="item_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_item_item" references="item(id)"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
